#include <vcl.h>
#pragma hdrstop

#include "Unit1.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TForm1 *Form1;
//---------------------------------------------------------------------------
__fastcall TForm1::TForm1(TComponent* Owner)
	: TForm(Owner)
{
}
//---------------------------------------------------------------------------
void __fastcall TForm1::Image2MouseEnter(TObject *Sender)
{
    // «апускаем анимацию при наведении мыши
    TGIFImage *gif = dynamic_cast<TGIFImage*>(Image1->Picture->Graphic);
    if (gif != nullptr)
    {
        gif->Animate = true;
        gif->AnimationSpeed = 100;  // ћожно настроить скорость анимации
    }
}
//---------------------------------------------------------------------------
